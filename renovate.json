{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "behind-base-branch",
  "labels": ["dependencies"],
  "ignoreDeps": ["@mdx-js/react", "react", "react-dom"],
  "packageRules": [
    {
      "matchPackageNames": [
        "nuxt"
      ]
    },
    {
      "groupName": "root-packages",
      "commitMessageTopic": "root dependency {{depName}}",
      "matchPaths": [
        "+(package.json)"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "groupName": "nuxt core",
      "groupSlug": "nuxt",
      "matchPackageNames": ["nuxt", "nuxt3"],
      "matchPackagePatterns": ["^@nuxt/"]
    },
    {
      "groupName": "vite",
      "commitMessageTopic": "vite-group dependency {{depName}}",
      "matchPackagePrefixes": ["vite"],
      "matchPackagePatterns": ["^@vitejs/"],
      "excludePackagePatterns": [
        "unocss"
      ],
      "excludePackageNames": [
        "vitest"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "vue",
      "commitMessageTopic": "vue-group dependency {{depName}}",
      "matchPackagePrefixes": ["vue", "@vue"],
      "excludePackagePatterns": [
        "storybook"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "storybook",
      "commitMessageTopic": "SB dependency {{depName}}",
      "matchPackagePatterns": [
        "storybook",
        "jest"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "testing",
      "commitMessageTopic": "testing dependency {{depName}}",
      "matchPaths": [
        "packages/vitest/package.json",
        "apps/vite/package.json"
      ],
      "matchPackageNames": [
        "vitest"
      ],
      "matchPackagePatterns": ["jsdom"],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "eslint",
      "commitMessageTopic": "linting dependency {{depName}}",
      "matchPackagePatterns": ["eslint"],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "unocss",
      "commitMessageTopic": "unocss-group dependency {{depName}}",
      "matchPackagePatterns": ["unocss"],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "pinia",
      "commitMessageTopic": "pinia-group dependency {{depName}}",
      "matchPackagePatterns": ["pinia"],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    }
  ]
}
